<Window x:Class="_221_Puzacheva.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_221_Puzacheva"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="720"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Name="MainFrame" Source="Pages/AuthPage.xaml" Navigated="MainFrame_Navigated" NavigationUIVisibility ="Hidden" HorizontalAlignment="Center" Grid.Row="1" Height="400" Width="720" VerticalAlignment="Center" />
        <Label Name="DateTimeLabel" Height="30" Margin="538,0,0,0" Grid.Row="2" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right"/>
        <Button Name="BackButton" Content="Назад" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="77" Click="BackButton_Click"/>
    </Grid>
</Window>
