<Window x:Class="_221_Puzacheva.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_221_Puzacheva"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Name="MainFrame" Source="Pages/AuthPage.xaml" Navigated="MainFrame_Navigated" NavigationUIVisibility ="Hidden" HorizontalAlignment="Center" Height="344" Grid.Row="1" VerticalAlignment="Center" Width="600"/>
        <Label Name="DateTimeLabel" HorizontalAlignment="Right" Height="30" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="135" FontSize="14" HorizontalContentAlignment="Right"/>
        <Button Name="BackButton" Content="Назад" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="77" Click="BackButton_Click"/>
    </Grid>
</Window>
